{
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"module": "esnext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"typeRoots": ["node_modules/@types", "./src"],
		"sourceMap": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": false
	},
	"exclude": ["./node_modules/**", "./dist/**/*", "./out/**/*"],
	"include": ["./src"],
	"ts-node": {
		"swc": true
	}
}
